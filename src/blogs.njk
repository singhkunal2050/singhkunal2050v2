      {%- for post in collections.post -%}
      
        <div class="blog-card">
          <h1 class="blog-title subhead_text">{{ post.data.title}}</h1>
          <div class="blog-hashtags">
            {% set comma = joiner() %}
            {% for tag in post.data.tags -%}
              {% if tag !== 'post' %}
                {{ comma() }}
                <a href="#">#{{ tag }}</a>
              {% endif %}
            {%- endfor %}
          </div>
          <p class="blog-description">{{post.data.description}}</p>
          <p class="blog-length"> {{ post.data.readTime  }} </p>
          <div class="blog-details">
            <a href="{{ post.url | url }}" class="blog-link">Read  Article >> </a>
            <p class="blog-date">{{ post.data.date | postDate }}</p>
          </div>
        </div>

      {%- endfor -%}

    <div class="pagination">

      <a href=""><< Previous</a>
       <a href="">Next >> </a> 

